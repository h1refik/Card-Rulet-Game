{
  "compilerOptions": {
    "target": "ES6",
    "moduleSuffixes": [".js", ""],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",  // Aligns module resolution with module system
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "./*.ts",
    "./three-extended.d.ts",
    "node_modules/three/examples/jsm/loaders/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist",
    "build"
  ]
}
